n,m = map(int, input().split())
graph = [[] for _ in range(n+1)]
visited = [False]*(n+1)
count=0

for _ in range(m):
  a,b = map(int,input().split())
  graph[a].append(b)
  graph[b].append(a)

def dfs(graph,v,visited):
  visited[v] = 1

  for nv in graph[v]:
    if visited[nv]==0:
      dfs(graph,nv,visited)

for i in range(1,n+1):
  if visited[i]==0:
    dfs(graph,i,visited)
    count+=1

print(count)
